---
// src/pages/docs/index.astro
import { getCollection } from "astro:content";
import DocsLayout from "../../layouts/DocsLayout.astro";

const docs = await getCollection("docs");
---

<DocsLayout title="Gemstone Builders Documentation">
  <h1 class="text-3xl font-bold mb-8">Documentation</h1>

  <div class="space-y-6">
    {
      docs.map((doc) => (
        <article>
          <h2 class="text-2xl mb-2">
            <a
              href={`/docs/${doc.slug}`}
              class="text-zinc-200 hover:text-zinc-600"
            >
              {doc.data.title}
            </a>
          </h2>
          <p class="text-gray-100">{doc.data.summary}</p>
        </article>
      ))
    }
  </div>
</DocsLayout>
